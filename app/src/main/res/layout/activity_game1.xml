<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game1"
    tools:context=".Game1Activity">

    <ImageView
        android:id="@+id/ic_balans"
        android:background="@drawable/bg_balance"
        android:layout_width="190dp"
        android:layout_margin="22dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_balans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balance_0000"
        android:textColor="@color/white"
        android:fontFamily="@font/rubik_mono_one_regular"
        app:layout_constraintStart_toStartOf="@id/ic_balans"
        app:layout_constraintEnd_toEndOf="@id/ic_balans"
        app:layout_constraintBottom_toBottomOf="@id/ic_balans"
        app:layout_constraintTop_toTopOf="@id/ic_balans"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_mono_one_regular"
        android:text="@string/_00000"
        android:textColor="@color/white"
        android:elevation="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/ceis"
        app:layout_constraintEnd_toEndOf="@id/ceis"
        app:layout_constraintBottom_toBottomOf="@id/ceis"
        app:layout_constraintTop_toTopOf="@id/ceis"/>

    <LinearLayout
        android:id="@+id/ceis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toTopOf="@id/btn_spin">

        <ImageView
            android:id="@+id/btn_minus"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_minus"/>
        <ImageView
            android:id="@+id/ic_check"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/bg_rate"/>

        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_plus"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="56dp"
        android:background="@drawable/buton_style"
        android:fontFamily="@font/rubik_mono_one_regular"
        android:padding="22dp"
        android:text="Spin"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/baraban_layout" />

    <LinearLayout
        android:id="@+id/baraban_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/ic_game1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_4" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_2" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_1" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_2" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_5" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_6" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_7" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>